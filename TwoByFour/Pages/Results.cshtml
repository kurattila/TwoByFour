@page
@using TwoByFour.Pages
@model TwoByFour.Pages.ResultsModel
@{
    ViewData["Title"] = "Results";
}

<form method="post">

    <h2>@ViewData["Title"]</h2>
    @for (int index = 0; index < Model.ResultEvaluations.Count; index++)
    {
        var singleResultEval = Model.ResultEvaluations[index];
        <h2>
            @Html.CheckBoxFor(model => model.ResultEvaluations[index].IsCorrect, new { @style = "zoom:1.8" })
            @Html.HiddenFor(model => model.ResultEvaluations[index].Result)
            @Html.Raw($"{index+1}:")
            @singleResultEval.Result
        </h2>
    }
    
    @if (!Model.OfferNewSession)
    {
        <button type="submit">Finished</button>
    }
    else
    {
        <button type="submit" asp-page-handler="NewSession">Start New Session!</button>
    }
</form>
